h3 pageNumber: #{pageNumber}
h3 pagesCount: #{pagesCount}

ul(class='pagination pagination--visible')
  if pageNumber === 1
    li(class='pagination__item pagination__item--disabled')
      span «
  else
    li(class='pagination__item')
      a(href=`/${pageNumber - 1}`) «
  if pageNumber > 6
    li(class='pagination__item')
      a(href='/1') 1
    li(class='pagination__item')
      a(href='/2') 2
    li(class='pagination__item pagination__item--disabled')
      span ..
    li(class='pagination__item')
      a(href=`/${pagesCount - 2}`) #{pagesCount - 2}
    li(class='pagination__item')
      a(href=`/${pagesCount - 1}`) #{pagesCount - 1}
  else
    - var i = 1;
    while i < pageNumber
      li(class='pagination__item')
        a(href=`/${i}`) #{i++}
  li(class='pagination__item pagination__item--active')
    span #{pageNumber}
  if pagesCount - pageNumber > 6
    li(class='pagination__item')
      a(href=`/${pageNumber + 1}`) #{pageNumber + 1}
    li(class='pagination__item')
      a(href=`/${pageNumber + 2}`) #{pageNumber + 2}
    li(class='pagination__item pagination__item--disabled')
      span ..
    li(class='pagination__item')
      a(href=`/${pagesCount - 1}`) #{pagesCount - 1}
    li(class='pagination__item')
      a(href=`/${pagesCount}`) #{pagesCount}
  else
    - var j = 1;
    while j < pageNumber
      li(class='pagination__item')
        a(href=`/${j}`) #{j++}
  if pageNumber === pagesCount
    li(class='pagination__item pagination__item--disabled')
      span »
  else
    li(class='pagination__item')
      a(href=`/${pageNumber + 1}`) »

